
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="courses edit">
  <h2>Update course</h2>

  <%= form_for(:course, :url => {:action => 'update', :id => @course.id}) do |f| %>

    <table summary="Course form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= f.text_field(:description) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Update Course") %>
    </div>

  <% end %>
</div>
